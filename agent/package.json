{
  "name": "netwatch-agent",
  "version": "1.0.0",
  "description": "NetWatch Employee Monitoring Agent",
  "main": "dist/main.js",
  "author": "Infinititech Partners",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "start:hidden": "npm run build && electron . --hidden",
    "dev": "tsc -w & electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.netwatch.agent",
    "productName": "NetWatch Agent",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
    "copyright": "Copyright (c) 2024 Infinititech Partners",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/512x512.png",
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "iconSize": 80,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "maintainer": "Infinititech Partners <support@netwatch.io>",
      "vendor": "Infinititech Partners"
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3"
      ],
      "afterInstall": "scripts/linux/after-install.sh",
      "afterRemove": "scripts/linux/after-remove.sh"
    },
    "publish": null
  },
  "dependencies": {
    "active-win": "^8.1.1",
    "auto-launch": "^5.0.6",
    "clipboardy": "^4.0.0",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-global-key-listener": "^0.3.0",
    "node-machine-id": "^1.1.12",
    "node-pty": "^1.0.0",
    "ps-list": "^8.1.1",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.0",
    "socket.io-client": "^4.8.2",
    "systeminformation": "^5.23.5"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^20.10.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "node-abi": "^3.71.0",
    "typescript": "^5.3.3"
  }
}
